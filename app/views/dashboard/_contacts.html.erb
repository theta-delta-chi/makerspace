<div class='six wide column' id='contacts_list'>
  <table class='ui very basic table'>
    <thead><tr>
      <th colspan='2'>Emergency Contact Numbers</th>
    </tr></thead>
    <tbody>
      <% contacts.each do |contact| %>
        <tr>
          <td><%= contact[:name] %></td>
          <td><%= contact[:phone] %></td>
        </tr>
      <% end %>
    </tbody>
    <tfoot><tr><th colspan='3'>
      <button id='edit_contacts' class='ui right floated button'>
        Edit
      </button>
    </th></tr></tfoot>
  </table>
</div>
