<div class="ui grid">
  <div class="row">
    <h1 class="ui huge dividing header">TDC Makerspace</h1>
  </div>
  <div class="row">
    <div class="four wide column">
      <table class="ui striped table">
        <thead><tr>
            <th colspan='2'>Emergency Contact Numbers</th>
        </tr></thead>
        <tbody>
        <% @contacts.each do |contact| %>
          <tr>
            <td><%= contact[:name] %></td>
            <td><%= contact[:number] %></td>
          </tr>
        <% end %>
        </tbody>
        <tfoot><tr><th colspan='3'>
            <button id='edit_contacts' class='ui right floated button'>
              Edit
            </button>
        </th></tr></tfoot>
      </table>
    </div>
    <div class="twelve wide column">
      <table class='ui striped table'>
        <thead>
          <tr><th colspan='2'>
            Recent Emergencies
            <button id='safety_test' class='ui right floated button'>
              Send Test SMS
            </button>
          </th></tr>
        </thead>
        <tbody>
        <% @emergencies.each do |emergency| %>
          <tr>
            <td><%= emergency[:time] %></td>
            <td><%= emergency[:link] %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

