<div class="ui stackable grid">
  <div class="row">
    <h1 class="ui huge dividing header">
      <img src="https://pbs.twimg.com/profile_images/235198826/interlok3_copy_reasonably_small.jpg" class='ui bottom aligned image'>
      TDC Makerspace Emergency System</h1>
  </div>
  <div class="row">
    <%= render partial: 'contacts', locals: {contacts: @contacts} %>
    <div class="ten wide column">
      <table class='ui very basic table'>
        <thead>
          <tr><th colspan='2'>
            Recent Emergencies
            <button id='safety_test' type='button' class='ui right floated compact button'>
              Send Test SMS
            </button>
          </th></tr>
        </thead>
        <tbody>
        <% @emergencies.each do |emergency| %>
          <tr>
            <td><%= emergency[:time] %></td>
            <td><%= emergency[:link] %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div id='contacts_form_container' class='row'>
    <%= render partial: 'contact_form', locals: {contacts: @contacts, new_contact: @new_contact} %>
  </div>
</div>

